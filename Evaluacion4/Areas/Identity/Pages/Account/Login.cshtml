@page
@model LoginModel

@{
    ViewData["Title"] = "Inicia sesion";
}

<h1>@ViewData["Title"]</h1>
<div class="row contenedor-login">
    <div class="col-md-4 contenedorxd">
        <section class="section-login">
            <form id="account" method="post">
                <h5>Entra y descubre las mejores ofertas.</h5>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group contenedor-email">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="inputEmail" />
                    <span asp-validation-for="Input.Email" class="text-danger span-error"></span>
                </div>
                <div class="form-group contenedor-contraseña">
                    <label asp-for="Input.Password">Contraseña</label>
                    <div class="form-control input-contraseña">
                        <input id="inputPassword" type="password" asp-for="Input.Password" class="" />
                        <span id="eye" onclick="showPassword()">
                            <i class="eye-button-close" id="closeEye"></i>
                            <i style="display:none;" class="eye-button-open" id="openEye"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger span-error"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Recuerdame
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary boton-loguear">Inicia sesion</button>
                </div>
                <div class="form-group">
                    @* <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p> *@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿No tienes un cuenta?
                            Regístrate.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
